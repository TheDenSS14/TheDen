<BoxContainer xmlns="https://spacestation14.io"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              Orientation="Horizontal"
              HorizontalExpand="True">
        <Label Name="TitleLabel"
               Margin="5 0"
               MouseFilter="Stop"/>

        <!--21 was the height of OptionsContainer at the time that this button was added. So I am limiting the texture to 21x21-->

        <Control SetSize="21 21">
            <TextureButton Name="Help" StyleClasses="HelpButton"/>
        </Control>
        <BoxContainer Name="OptionsContainer"
                      SetWidth="400"/>
        <Button
            Name="OpenAlternateJobTitlesWindowButton"
            Text="{Loc 'humanoid-profile-editor-alternate-job-titles'}"
            HorizontalAlignment="Right"
            Margin="20 0 10 0"
            SetWidth="150"
            Disabled="True"/>
        <Button Name="JobActionsButton" Text="{Loc 'loadout-job-actions-window-button'}" Margin="10 0 10 0" />


</BoxContainer>
