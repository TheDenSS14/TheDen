<tabs:DenTab xmlns="https://spacestation14.io"
                  xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                  xmlns:tabs="clr-namespace:Content.Client.Options.UI.Tabs"
                  xmlns:xNamespace="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:s="clr-namespace:Content.Client.Stylesheets">
    <!-- Den Tab -->
    <BoxContainer Orientation="Vertical">
        <ScrollContainer VerticalExpand="True" HorizontalExpand="True">
            <BoxContainer Orientation="Vertical" Margin="8 8 8 8" VerticalExpand="True">
                <!-- Denu -->
                <Label Text="{Loc 'ui-options-den-denu'}"
                       FontColorOverride="{xNamespace:Static s:StyleNano.NanoGold}"
                       StyleClasses="LabelKeyText"/>

                <PanelContainer StyleClasses="LowDivider" Margin="0 8" />

                <CheckBox Name="AutoFormatterEnabled" Text="{Loc 'ui-options-auto-formatter-enabled'}" />
                <CheckBox Name="RemoveAsterisksFromEmotes" Text="{Loc 'ui-options-remove-asterisks'}" />
                <CheckBox Name="ShowTypingRangeOnShortRange" Text="{Loc 'ui-options-show-typing-range'}" />

                <PanelContainer StyleClasses="LowDivider" Margin="0 8" />

                <BoxContainer Orientation="Vertical" Margin="0 0" HorizontalExpand="True">
                    <Label Text="{Loc 'ui-options-dialogue-color'}"
                           HorizontalExpand="True"
                           FontColorOverride="{xNamespace:Static s:StyleNano.NanoGold}"
                           StyleClasses="LabelKeyText"/>
                    <RichTextLabel Name="DialoguePreviewLabel" Text="{Loc 'ui-options-preview-placeholder'}" />
                    <ColorSelectorSliders Name="DialogueColorSelector" HorizontalExpand="True" MinWidth="200" />

                    <PanelContainer StyleClasses="LowDivider" Margin="0 8" />

                    <Label Text="{Loc 'ui-options-emote-color'}"
                           HorizontalExpand="True"
                           FontColorOverride="{xNamespace:Static s:StyleNano.NanoGold}"
                           StyleClasses="LabelKeyText"/>
                    <RichTextLabel Name="EmotePreviewLabel" Text="{Loc 'ui-options-preview-placeholder'}" />
                    <ColorSelectorSliders Name="EmoteColorSelector" HorizontalExpand="True" MinWidth="200" />
                </BoxContainer>

            </BoxContainer>
        </ScrollContainer>

        <controls:StripeBack HasBottomEdge="False" HasMargins="False">
            <Button Name="ApplyButton"
                    Text="{Loc 'ui-options-apply'}"
                    TextAlign="Center"
                    HorizontalAlignment="Right" />
        </controls:StripeBack>
    </BoxContainer>
</tabs:DenTab>
