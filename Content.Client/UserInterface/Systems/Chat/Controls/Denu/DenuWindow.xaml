<controls:DenuWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Systems.Chat.Controls.Denu"
    MinSize="400 400">

    <TabContainer Name="Tabs">
        <!-- Chat Tab -->
        <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
            <BoxContainer Orientation="Vertical" Margin="10">

                <!-- Settings Section (no more accordion) -->
                <Label Text="Chat Settings:" StyleClasses="LabelHeading" />

                <!-- Auto Formatter Option -->
                <BoxContainer Orientation="Horizontal" Margin="0 5">
                    <CheckBox Name="AutoFormatterCheckBox" />
                    <Label Text="Enable Auto Formatter" Margin="5 0 0 0" />
                </BoxContainer>
                
                <BoxContainer Orientation="Horizontal" Margin="0 5">
                    <CheckBox Name="RemoveAsterisksCheckBox" />
                    <Label Text="Remove Asterisks from Emotes" Margin="5 0 0 0" />
                </BoxContainer>

                <BoxContainer Orientation="Horizontal" Margin="0 5">
                    <controls:ToggleButton Name="TypingToggleButton" Text="Show Typing Indicator" />
                </BoxContainer>

                <!-- Color Settings -->
                <Control MinSize="0 10" />
                <Label Text="Colors:" StyleClasses="LabelHeading" />

                <Label Text="Dialogue Color:" MinSize="100 0" />
                <ColorSelectorSliders Name="DialogueColorSelector" />

                <Label Text="Emote Color:" MinSize="100 0" />
                <ColorSelectorSliders Name="EmoteColorSelector" />

                <Label Text="Message Preview:" StyleClasses="LabelHeading" />
                <PanelContainer StyleClasses="AngleRect" MinSize="0 80" Margin="0 5">
                    <RichTextLabel Name="LivePreview"
                                   Margin="10"
                                   VerticalAlignment="Top"
                                   Text="Type in chat to see preview here..." />
                </PanelContainer>
            </BoxContainer>
        </ScrollContainer>

        <!-- Help Tab -->
        <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
            <BoxContainer Orientation="Vertical" Margin="10">
                <Label Text="Help content goes here..." />
            </BoxContainer>
        </ScrollContainer>
    </TabContainer>

</controls:DenuWindow>